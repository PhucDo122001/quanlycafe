<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lightwhite"
    android:padding="10dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/txt_customtable_TenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/img_customtable_BanAn"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:src="@drawable/table_coffee"
        android:layout_below="@+id/txt_customtable_TenBanAn"
        android:background="@color/cream"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_customtable_GoiMon"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:src="@drawable/cafe_icon"
        android:background="@color/cream"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_marginLeft="6dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/img_customtable_ThanhToan"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:src="@drawable/payment_icon"
        android:background="@color/cream"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_toRightOf="@id/img_customtable_GoiMon"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/img_customtable_AnNut"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/img_customtable_ThanhToan"
        android:background="@color/cream"
        android:padding="5dp"
        android:src="@drawable/out_icon"
        android:visibility="invisible"

        />

</RelativeLayout>